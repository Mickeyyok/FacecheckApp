<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <!-- Header Background -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:background="@drawable/bg_gradient"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="เช็คชื่อสำเร็จ"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp" />

    </LinearLayout>

    <!-- Content Area -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Card Container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:elevation="4dp"
                android:padding="20dp"
                android:layout_marginTop="-50dp">

                <!-- Green Status Box -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:background="#4CAF50"
                    android:gravity="center"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ตรงเวลา"
                        android:textSize="30sp"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- Row 1: ชื่อวิชา -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ชื่อวิชา"
                        android:textSize="16sp"
                        android:textColor="#666666" />

                    <TextView
                        android:id="@+id/tvCourseName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="กระดูกล"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:gravity="end" />
                </LinearLayout>

                <!-- Row 2: รหัสวิชา -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="รหัสวิชา"
                        android:textSize="16sp"
                        android:textColor="#666666" />

                    <TextView
                        android:id="@+id/tvCourseCode"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="SP 999-1"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:gravity="end" />
                </LinearLayout>

                <!-- Row 3: ห้อง -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ห้อง"
                        android:textSize="16sp"
                        android:textColor="#666666" />

                    <TextView
                        android:id="@+id/tvRoom"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="21509"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:gravity="end" />
                </LinearLayout>

                <!-- Row 4: วัน/เวลา -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="วัน/เวลา"
                        android:textSize="16sp"
                        android:textColor="#666666" />

                    <TextView
                        android:id="@+id/tvDateTime"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="3 ต.ค 2568 / 10.30 น."
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:gravity="end" />
                </LinearLayout>

                <!-- Row 5: เวลาที่เช็คชื่อ -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="เวลาที่เช็คชื่อ"
                        android:textSize="16sp"
                        android:textColor="#666666" />

                    <TextView
                        android:id="@+id/tvCheckInTime"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="10.25 น."
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:gravity="end" />
                </LinearLayout>

            </LinearLayout>

            <!-- Button: กลับหน้าหลัก -->
            <Button
                android:id="@+id/btnBackToMain"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="20dp"
                android:text="กลับหน้าหลัก"
                android:textSize="18sp"
                android:backgroundTint="#000080"
                android:textColor="@android:color/white" />

            <!-- Button: ดูประวัติ -->
            <Button
                android:id="@+id/btnViewHistory"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="20dp"
                android:text="ดูประวัติ"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:background="@drawable/btn_addsj"
                android:stateListAnimator="@null" />

        </LinearLayout>

    </ScrollView>

    <!-- Bottom Navigation Bar -->
    <include layout="@layout/bottom_navbar" />

</LinearLayout>